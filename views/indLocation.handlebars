<div class="container">
  <div class="row">
    <div class="col s12">
     <div class="card-panel grey lighten-5 z-depth-1">
       <div class="row">
         <div class="col s12 m4">
           <img src="http://lorempixel.com/output/technics-q-c-640-480-7.jpg" alt="" class="responsive-img">
         </div>
         <div class="col s12 m8">
           <h3>{{location.location_name}}</h2>
             <hr>
           <h5>Line Length: {{location.line_length}}</h5>
         </div>
       </div>
     </div>
   </div>
  </div>
</div>

<div class="container">
    <div class="row">
        <div class="col s12 center-align">
            <h3>How Long is the Line?</h3>
            <p class="flow-text">
              Help us keep our data up to date by voting.
            </p>
            {{#if login}}
            <div class="row center-align">
            <form>
              <button id="shortLine" class="waves-effect waves-light btn" value="1">Short Line</button>
              <button id="mediumLine" value="2" class="waves-effect waves-light btn">Medium Line</button>
              <button id="longLine" value="3" class="waves-effect waves-light btn">Long Line</button>
            </form>
            </div>
            {{else}}
            <div class="row center-align">
              <h5>Please login to vote</h5>
            </div>
            {{/if}}
        </div>
    </div>
</div>



<script src="/assets/js/lineLength.js" type="text/javascript"></script>
