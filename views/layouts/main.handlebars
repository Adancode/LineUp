<!DOCTYPE html>
<html lang="en">

<head>
	<meta name="viewport" content="initial-scale=1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
	<link rel="stylesheet" href="/assets/css/style.css" type="text/css" />
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
	<script src="https://use.fontawesome.com/977cfe96bb.js"></script>
	<title>LineUp</title>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCsWjdQWtX5MKGkDptD2flvRjdvusfUNio&libraries=geometry"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
</head>

<body>
	<nav class="blue-grey darken-4">
		<div class="nav-wrapper">
			<a href="/" class="brand-logo left">LineUp</a>
			{{#if login}}
				<a href="/logout" id="logoutBtn" class="btn btn-default btn-sm">Logout</a>
			{{else}}
				<a href="#firstModalScreen" id="loginBtn" class="btn btn-default modal-trigger waves-effect waves-light"><span class="fa fa-lock"></span> Login</a>
			{{/if}}
		</div>
	</nav>
	<main>
		{{{ body }}}
	</main>


	<!-- Modals for login in screens -->
	<div id="firstModalScreen" class="modal">
	  <div class="modal-content center-align">
	    <h4 class="center-align">Login or Sign Up</h4>
	    <a href="#loginModal" class="btn btn-large modal-action modal-close modal-trigger waves-effect waves-light">Login</a>
	    <a href="#signUpModal" class="btn btn-large modal-action modal-close modal-trigger waves-effect waves-light">Signup</a>
	  </div>
	</div>

	<!-- Login In Modal Pop Up -->
	<div id="loginModal" class="modal modal-fixed-footer">
	  <div class="modal-content">
	    <h4><span class="fa fa-sign-in"></span> User Login</h4>
	    <form action="/login" method="post">
	        <div class="form-group">
	          <input type="text" class="form-control" name="username">
	          <label>Email</label>
	        </div>
	        <div class="form-group">
	          <input type="password" class="form-control" name="password">
	          <label>Password</label>
	        </div>
	        <div class="form-group">
	          <button type="submit" class="btn btn-warning btn-large formSubmit waves-effect waves-light">Login</button>
	        </div>
	    </form>
	  </div>
	  <div class="modal-footer center-align">
	    <p>Need an account? <a href="#signUpModal" class="modal-trigger modal-action modal-close">Signup</a> | Or go <a href="/">home</a>.</p>
	  </div>
	</div>

	<!-- Sign Up Modal -->
	<div id="signUpModal" class="modal modal-fixed-footer">
	  <div class="modal-content">
	    <h4><span class="fa fa-sign-in"></span> Signup</h4>
	    <form action="/signup" method="post">
	      <div class="form-group">
	        <input type="text" class="form-control" name="username">
					<label>Email</label>
	      </div>
	      <div class="form-group">
	        <input type="password" class="form-control" name="password">
	        <label>Password</label>
	      </div>
	      <button type="submit" class="btn btn-warning btn-large formSubmit waves-effect waves-light">Signup</button>
	    </form>
	  </div>
	  <div class="modal-footer center-align">
	    <p>Already have an account? <a href="#loginModal" class="modal-trigger modal-action modal-close">Login</a> | Or go <a href="/">home</a>.</p>
	  </div>
	</div>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
	<script src="/assets/js/main.js" type="text/javascript"></script>
	<script src="/assets/js/login.js"></script>
</body>
</html>
